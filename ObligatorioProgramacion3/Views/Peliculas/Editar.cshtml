@model ObligatorioProgramacion3.Models.Pelicula
@{
    ViewData["Title"] = "Editar pelicula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Editar una pelicula</h3>
<form method="post" asp-action="Editar">
    <!--Importante para editar-->
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">
            <div class="row">
                <div class="col-4">
                    <label asp-for="Titulo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Genero"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Genero" class="form-control" />
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Sinopsis"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Sinopsis" class="form-control" />
                    <span asp-validation-for="Sinopsis" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-3">
            <a asp-action="Index">Volver a lista</a>
        </div>
        <div class="col-5 offset-4">
            <button type="submit" class="btn btn-primary form-control">Editar</button>
            &nbsp;
        </div>
    </div>
</form>
