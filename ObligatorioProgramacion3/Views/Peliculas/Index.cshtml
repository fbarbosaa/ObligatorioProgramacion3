@model IEnumerable<ObligatorioProgramacion3.Models.Pelicula>
@{
    ViewData["Title"] = "Lista de peliculas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<li class="nav-item">
 <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">
    Peliculas </a>
</li> 

<div class="row">
    <div class="col-4">
        <h3>Lista de peliculas</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear Pelicula</a>
    </div>
    <div>

        @if (Model.Count() > 0)
        {
            <table calss="table table-striped border">
                <tr>
                    <th>
                        Nombre de Pelicula
                    </th>
                    <th>

                    </th>
                </tr>

                @foreach (var pelicula in Model)
                {
                    <tr>
                        <td>@pelicula.Titulo</td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@pelicula.PeliculaId">Editar</a>
                            <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@pelicula.PeliculaId">Borrar</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No hay categorias</p>
        }
    </div>

