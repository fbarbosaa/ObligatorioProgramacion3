@model IEnumerable<ObligatorioProgramacion3.Models.Pelicula>
@{
	ViewData["Title"] = "Lista de peliculas";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
	<div class="col-4">
		<h3>Lista de peliculas</h3>
	</div>
	<div class="col-3">
		<a asp-action="Crear" class="btn btn-primary form-control">Crear pelicula</a>
	</div>
</div>

<div>
	@if (Model.Count() > 0)
	{
		<table class="table table-striped border">
			<tr>
				<th>
					Nombre de pelicula
				</th>
			</tr>
			@foreach (var pelicula in Model)
			{
				<tr>
					<td>@pelicula.Titulo</td>
					<td>
						<a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@pelicula.Id">Editar</a>
						<a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@pelicula.Id">Borrar</a>
					</td>
				</tr>
			}
		</table>
	}
	else
	{
		<p>No hay peliculas</p>
	}
</div>

