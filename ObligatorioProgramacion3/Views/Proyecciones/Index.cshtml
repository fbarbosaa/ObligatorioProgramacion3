@model IEnumerable<ObligatorioProgramacion3.Models.Proyeccion>
@{
	ViewData["Title"] = "Lista de proyecciones";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
	<div class="col-4">
		<h3>Lista de proyecciones</h3>
	</div>
	<div class="col-3">
		<a asp-action="Crear" class="btn btn-primary form-control">Agregar proyeccion</a>
	</div>
</div>

<div>
	@if (Model.Count() > 0)
	{
		<table class="table table-striped border">
			<tr>
				<th>
					Proyeccion
				</th>
			</tr>
			@foreach (var proyeccion in Model)
			{
				<tr>
					<td>@proyeccion.IdPelicula</td>
					<td>@proyeccion.Fecha.ToString("yyyy/MM/dd")</td>
					<td>@proyeccion.Hora</td>
					<td>@proyeccion.Sala</td>
					<td>
						<a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@proyeccion.Id">Editar</a>
						<a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@proyeccion.Id">Borrar</a>
					</td>
				</tr>
			}
		</table>
	}
	else
	{
		<p>No hay proyeccciones</p>
	}
</div>

