@model ObligatorioProgramacion3.Models.Proyeccion
@{
    ViewData["Title"] = "Editar datos de proyecciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Editar proyeccion</h3>
<form method="post" asp-action="Editar">
    <!--Importante para editar-->
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">
            <div class="row">
                <div class="col-4">
                    <label asp-for="Fecha"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Hora"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Hora" class="form-control" />
                    <span asp-validation-for="Hora" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="IdPelicula"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IdPelicula" class="form-control" />
                    <span asp-validation-for="IdPelicula" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="IdSala"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IdSala" class="form-control" />
                    <span asp-validation-for="IdSala" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="IdEmpleado"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IdEmpleado" class="form-control" />
                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-3">
            <a asp-action="Index">Volver a lista</a>
        </div>
        <div class="col-5 offset-4">
            <button type="submit" class="btn btn-primary form-control">Editar</button>
            &nbsp;
        </div>
    </div>
</form>
